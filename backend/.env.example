# ============================================================
# Smart Enterprise Suite - Environment Variables
# ============================================================

# Environment
NODE_ENV=development
PORT=5000
HOST=localhost

# Database
DATABASE_URL=file:./dev.db

# Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-required!!
JWT_EXPIRY=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
CORS_CREDENTIALS=true

# API Configuration
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# File Uploads
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
COOKIE_SECRET=your-cookie-secret-key-min-32-chars!!
HELMET_ENABLED=true
CSRF_ENABLED=true

# Optional: Redis for rate limiting (replaces in-memory store)
REDIS_URL=redis://localhost:6379

# Optional: Email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@smartenterprise.com

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Optional: AI Integration
OPENAI_API_KEY=sk-...
